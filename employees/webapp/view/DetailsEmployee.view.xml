<mvc:View
	controllerName="employees.controller.DetailsEmployee"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    
    <Page title="{i18n>employeeDetails}">

        <FlexBox height="4.1rem" 
                alignItems="Center" 
                justifyContent="Center">
            <items>
                <Text   text="{jsonEmployees>LastName}, {jsonEmployees>FirstName}"
                        class="boldText"/>
            </items>
        </FlexBox>
    </Page>
</mvc:View>