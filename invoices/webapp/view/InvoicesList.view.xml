<mvc:View 
    controllerName="invoices.controller.InvoicesList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <List   id="invoiceList"
            headerText="{i18n>invoiceListTitle}"
            class="sapUiResponsiveMargin"
            items="{ path: 'northwind>/Invoices',
                     sorter: { path: 'ShipperName',
                               group: true}
                    }"
            width="auto">
        <headerToolbar>
            <Toolbar>
            <Title text="{i18n>invoiceListTitle}"/>
            <ToolbarSpacer/>
            <SearchField width="50%" liveChange="onFilter"/>
            </Toolbar>
        </headerToolbar>    
        <items>
            <ObjectListItem title="{northwind>Quantity} x {northwind>ProductName}"
                            number="{
                                parts:[
                                { path:'northwind>ExtendedPrice' },
                                { path:'currency>/usd' }
                                ],
                                type:'sap.ui.model.type.Currency',
                                formatOptions:{
                                    showMeasure: false,
                                    roundingMode: 'TOWARDS_ZERO',
                                    style: 'short'
                                }
                            }"
                            numberUnit="{currency>/usd}" 
                            numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}"
                            type="Navigation"
                            press="onNavToDetails"
                            >
                            <firstStatus>
                                <ObjectStatus text="{northwind>ShipperName}"/>
                                <!-- <ObjectStatus text="{
                                                path:'invoices>Status',
                                                formatter:'.formatter.invoicesSstatus'
                                                }"/>                                                                  -->
                            </firstStatus>
                            <!-- <secondStatus>
                                <ObjectStatus text="{invoices>ShipperName}"/>                                                                 
                            </secondStatus> -->
            </ObjectListItem>
        </items>
    </List>
</mvc:View>